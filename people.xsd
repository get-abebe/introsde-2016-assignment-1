<?xml version="1.0" encoding="UTF-8" ?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:element name="people">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="person" maxOccurs="unbounded" minOccurs="0">
          <xs:complexType>
            <xs:sequence>
              <xs:element type="xs:string" name="firstname"/>
              <xs:element type="xs:string" name="lastname"/>
              <xs:element type="xs:dateTime" name="birthdate"/>
              <xs:element name="healthprofile">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element type="xs:dateTime" name="lastupdate"/>
                    <xs:element type="xs:double" name="weight"/>
                    <xs:element type="xs:double" name="height"/>
                    <xs:element type="xs:double" name="bmi"/>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
            <xs:attribute type="xs:double" name="id" use="optional"/>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>